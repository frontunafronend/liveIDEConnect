{
  "name": "liveideconnect-backend",
  "version": "1.0.0",
  "description": "Backend API for Webplace LiveIDEConnect",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "seed": "tsx src/db/seed.ts",
